{
  "name": "llms-full-unbind-mcp",
  "version": "0.1.4",
  "description": "Model Context Protocol server for llms-full-unbind",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "llms-full-unbind-mcp": "./lib/cli.js"
  },
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=24.11.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "gunshi": "^0.27.0-beta.6",
    "llms-full-unbind": "workspace:*",
    "minisearch": "^7.2.0",
    "undici": "^7.16.0",
    "zod": "^4.1.13"
  },
  "scripts": {
    "build": "tsdown",
    "test": "node --test tests/src/**/*.ts",
    "cover": "c8 --reporter=lcov --reporter=text pnpm run test",
    "type-check": "tsc --noEmit",
    "inspector": "npm run build && npx @modelcontextprotocol/inspector node ./lib/cli.js https://vuejs.org/llms-full.txt",
    "update-resources": "node ./tools/update-readme.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ota-meshi/llms-full-unbind.git",
    "directory": "packages/llms-full-unbind-mcp"
  },
  "author": "Yosuke Ota",
  "funding": "https://github.com/sponsors/ota-meshi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ota-meshi/llms-full-unbind/issues"
  },
  "homepage": "https://github.com/ota-meshi/llms-full-unbind#readme",
  "keywords": [
    "llms-full.txt",
    "llms-full",
    "mcp",
    "model context protocol"
  ],
  "publishConfig": {
    "access": "public"
  }
}
